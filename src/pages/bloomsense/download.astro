---
import SiteLayout from "../../layouts/SiteLayout.astro";
import "../../styles/global.css";
---

<SiteLayout
  title="Download BloomSense â€” Omnise"
  description="Download BloomSense for iOS. The pH Tracker for Vaginal Health."
>
  <!-- Full screen container with vibrant gradient background (Pink to Purple) -->
  <main class="min-h-screen relative overflow-hidden bg-gradient-to-br from-pink-500 via-purple-600 to-indigo-700 text-white selection:bg-pink-300 selection:text-pink-900">

    <!-- Background Pattern/Overlay (Optional texture) -->
    <div class="absolute inset-0 opacity-10 bg-[url('/grid.svg')] pointer-events-none"></div>

    <div class="relative mx-auto w-full max-w-7xl px-6 lg:px-8 flex flex-col pt-10 pb-20 lg:pt-0 lg:h-screen lg:justify-center">

      <!-- Top Brand -->
      <div class="w-full flex justify-start lg:absolute lg:top-10 lg:left-8 mb-12 lg:mb-0 z-10">
        <div class="flex items-center gap-2">
           <!-- Simple Brand Logo Concept -->
           <div class="w-8 h-8 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center border border-white/30">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
           </div>
           <span class="text-lg font-bold tracking-wide uppercase text-white/90">BloomSense</span>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-8 items-center">

        <!-- Left: Text Content -->
        <div class="text-center lg:text-left z-10 flex flex-col items-center lg:items-start order-2 lg:order-1">
          <h1 class="text-5xl lg:text-7xl font-bold tracking-tight mb-6 leading-tight drop-shadow-sm">
            The most effective <br class="hidden lg:block"/>tracker for <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-200 to-white">Your Health</span>
          </h1>

          <p class="text-lg lg:text-xl text-white/80 max-w-lg mb-10 font-light leading-relaxed">
            Scan, log, and track your vaginal pH with ease. <br/>
            Descriptive insights, designed for privacy.
          </p>

          <!-- Download Buttons -->
          <div class="flex flex-col sm:flex-row items-center gap-4 w-full justify-center lg:justify-start">
             <!-- Apple App Store -->
             <a
                href="https://apps.apple.com/us/app/bloomsense-ph-tracker/id6739832267"
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center bg-black text-white px-5 py-2.5 rounded-xl border border-white/20 shadow-xl hover:scale-105 transition-all duration-300"
              >
               <svg class="w-8 h-8 mr-3 fill-current" viewBox="0 0 24 24"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.21-1.96 1.07-3.09-1.05.08-2.32.74-3.07 1.63-.66.79-1.2 1.98-1.02 3.08 1.17.09 2.37-.64 3.02-1.62z"/></svg>
               <div class="text-left">
                  <div class="text-[0.6rem] uppercase tracking-wider opacity-70">Download on the</div>
                  <div class="text-lg font-bold leading-none">App Store</div>
               </div>
             </a>

             <!-- Google Play -->
             <div class="group relative flex items-center bg-black/40 text-white/50 px-5 py-2.5 rounded-xl border border-dashed border-white/10 cursor-not-allowed">
                <svg class="w-8 h-8 mr-3 fill-current opacity-50" viewBox="0 0 24 24"><path d="M3,20.5V3.5C3,2.91,3.34,2.39,3.84,2.15L13.69,12L3.84,21.85C3.34,21.6,3,21.09,3,20.5M16.81,15.12L6.05,25.88L20.06,11.87L16.81,15.12M20.37,11.56L16.81,8.88L21.35,4.34C21.62,4.61,21.85,4.96,21.96,5.37C22.07,5.78,22.05,6.23,21.88,6.63L20.37,11.56M15,7.5L5.15,17.35L14.59,7.91L15,7.5Z"/></svg>
                <div class="text-left">
                   <div class="text-[0.6rem] uppercase tracking-wider">Android App on</div>
                   <div class="text-lg font-bold leading-none">Google Play</div>
                </div>
                <div class="absolute -top-3 -right-2 bg-yellow-400 text-black text-[0.6rem] font-bold px-1.5 py-0.5 rounded rotate-12 shadow-sm">SOON</div>
             </div>
          </div>

          <div class="mt-8 text-xs text-white/40 font-light flex gap-4">
             <a href="/bloomsense/privacy" class="hover:text-white transition-colors">Privacy</a>
             <a href="/bloomsense/terms" class="hover:text-white transition-colors">Terms</a>
          </div>
        </div>

        <!-- Right: iPhone Mockup (CSS Only) -->
        <div class="flex justify-center items-center relative order-1 lg:order-2">
            <!-- Glow effect behind phone -->
            <div class="absolute w-80 h-80 bg-white/30 rounded-full blur-3xl -z-10 animate-pulse"></div>

            <!-- CSS iPhone 17 Pro Max Frame (Concept: Taller, Dynamic Island, Thin Borders) -->
            <div class="relative w-[320px] h-[690px] bg-black rounded-[60px] shadow-2xl border-[6px] border-gray-800 ring-1 ring-white/20 overflow-hidden transform lg:rotate-[-5deg] lg:hover:rotate-0 transition-all duration-700 ease-out">

                <!-- Dynamic Island -->
                <div class="absolute top-3 left-1/2 transform -translate-x-1/2 h-[32px] w-[110px] bg-black rounded-full z-20 pointer-events-none border border-gray-800/50"></div>

                <!-- Screen Content -->
                <div class="w-full h-full bg-slate-900 relative overflow-hidden rounded-[52px]">
                    <img
                      src="/assets/bloomsense-screen.png"
                      alt="BloomSense App Interface"
                      class="w-full h-full object-cover"
                    />
                </div>
            </div>
        </div>

      </div>
    </div>
  </main>
</SiteLayout>
